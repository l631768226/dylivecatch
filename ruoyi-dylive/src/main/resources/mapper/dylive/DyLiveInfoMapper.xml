            <if test="isManager != null">#{isManager},</if>
            <if test="dateInfo != null">#{dateInfo},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="userLevel != null">#{userLevel},</if>
            <if test="isVip != null">#{isVip},</if>
         </trim>
    </insert>

    <update id="updateDyLiveInfo" parameterType="DyLiveInfo">
        update dy_live_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="content != null">content = #{content},</if>
            <if test="sendtime != null">sendtime = #{sendtime},</if>
            <if test="anchorNickname != null">anchor_nickname = #{anchorNickname},</if>
            <if test="anchorImg != null">anchor_img = #{anchorImg},</if>
            <if test="anchorUrl != null">anchor_url = #{anchorUrl},</if>
            <if test="dataId != null">data_id = #{dataId},</if>
            <if test="liveCount != null">live_count = #{liveCount},</if>
            <if test="thumbsCount != null">thumbs_count = #{thumbsCount},</if>
            <if test="isManager != null">is_manager = #{isManager},</if>
            <if test="dateInfo != null">date_info = #{dateInfo},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="userLevel != null">user_level = #{userLevel},</if>
            <if test="isVip != null">is_vip = #{isVip},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDyLiveInfoById" parameterType="Integer">
        delete from dy_live_info where id = #{id}
    </delete>

    <delete id="deleteDyLiveInfoByIds" parameterType="String">
        delete from dy_live_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>